{
  "coc.preferences.formatOnSaveFiletypes": [
    "java",
    "javascript",
    "json",
    "python",
    "scala",
    "yaml"
  ],

  // python config
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pytypeEnabled": true,
  "python.venvPath": "$MINICONDA/envs",

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  /* "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]", */
  "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
  "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "<esc>": "esc",
    "e": "open",
    "v": "open:vsplit",
    "h": "open:split",
    "t": "open:tab",
    ".": "toggleHidden",
    "R": "refresh",
    "?": "help",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",
    "gp": "preview:labeling"
  },

  // scala-metals
  "metals.showInferredType": true,
  "metals.statusBarEnabled": true
}
